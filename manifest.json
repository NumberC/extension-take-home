{
    "manifest_version": 3,
    "name": "DevTools Recorder",
    "version": "1.0",
    "description": "Records user interactions on Chrome",
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"] ,
    "background": { "service_worker": "./background.js" },
    "action": { "default_popup": "./popup/popup.html" },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./scripts/content.js"]
      }
    ]
  }